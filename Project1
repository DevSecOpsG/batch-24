node {
   def dockerImageTag = "devopsexample${env.BUILD_NUMBER}"
    stage('Deploy deploy command')
{
        sh "docker images"
        sh "docker rm -f devopsexample "
        sh "docker run --name devopsexample -d -p 2222:2222 vickeyyvickey/myapplication:latest"
    }
}

